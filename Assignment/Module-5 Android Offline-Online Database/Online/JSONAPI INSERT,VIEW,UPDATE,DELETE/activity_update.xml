<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UpdateActivity"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Update Employee Data"
        android:textSize="27sp"
        android:layout_margin="20dp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:textColor="#6A1B9A"/>

    <EditText
        android:id="@+id/edtempname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Employee Name"
        android:layout_marginBottom="10dp"/>

    <EditText
        android:id="@+id/edtempsurname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Employee Surname"
        android:layout_marginBottom="10dp"/>

    <EditText
        android:id="@+id/edtempemail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Employee Email"
        android:layout_marginBottom="10dp"/>

    <EditText
        android:id="@+id/edtemppassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Employee Email Password"
        android:layout_marginBottom="10dp"/>


    <Button
        android:id="@+id/enter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter"
        android:textSize="15dp"
        android:layout_margin="10dp"/>

</LinearLayout>