<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Welcome"
        android:textSize="25sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_margin="20dp"
        android:textColor="#00695C"/>

   <EditText
       android:id="@+id/edtempname"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:hint="Enter Employee Name"
       android:layout_marginBottom="10dp"/>

    <EditText
        android:id="@+id/edtempsurname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Employee Surname"
        android:layout_marginBottom="10dp"/>

    <EditText
        android:id="@+id/edtempemail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Employee Email"
        android:layout_marginBottom="10dp"/>

    <EditText
        android:id="@+id/edtemppassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Employee Email Password"
        android:layout_marginBottom="10dp"/>


    <Button
        android:id="@+id/enter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter"
        android:textSize="15dp"
        android:layout_margin="10dp"/>

</LinearLayout>